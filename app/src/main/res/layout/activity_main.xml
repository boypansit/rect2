<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.boypansit.appsparepart.MainActivity">


    <TextView
    android:id="@+id/txtResult"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="QR Code : "
    android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="SEARCH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Search"
        android:layout_marginTop="32dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/txtResult"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/Searchresult"
        android:layout_toRightOf="@+id/Searchresult"
        android:layout_alignRight="@+id/editText1"
        android:layout_alignEnd="@+id/editText1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/editText3"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2" />

    <TextView
        android:id="@+id/Searchresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESULT : "
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/Search"
        android:layout_alignLeft="@+id/txtResult"
        android:layout_alignStart="@+id/txtResult"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText1"
        android:layout_above="@+id/editText2"
        android:layout_toRightOf="@+id/Searchresult"
        android:layout_toEndOf="@+id/Searchresult" />

    <Button
        android:text="SCAN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        android:id="@+id/button"
        android:elevation="10dp"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/del"
        style="@android:style/Widget.Material.Light.Button.Small"
        android:elevation="3dp"
        android:layout_alignBaseline="@+id/change"
        android:layout_alignBottom="@+id/change"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"/>

    <Button
        android:text="register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/regis"
        android:elevation="5dp"
        style="@android:style/Widget.Material.Light.Button.Small"
        android:layout_marginBottom="33dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/editText3"
        android:layout_alignEnd="@+id/editText3"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/plain_text_input"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:inputType="text"
        android:layout_above="@+id/change"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/Search"
        android:layout_toStartOf="@+id/Search"
        android:visibility="invisible"/>

    <Button
        android:text="on-site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/change"
        style="@android:style/Widget.Material.Light.Button.Small"
        android:elevation="3dp"
        android:layout_alignBaseline="@+id/regis"
        android:layout_alignBottom="@+id/regis"
        android:layout_alignLeft="@+id/Searchresult"
        android:layout_alignStart="@+id/Searchresult"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:visibility="invisible"/>

</RelativeLayout>
